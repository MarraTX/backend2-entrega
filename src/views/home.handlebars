<div class="row">
    <div class="col-12">
        <h1 class="mb-4">Bienvenido a nuestra Tienda Online</h1>
        <p class="lead">Explora nuestros Ãºltimos productos y encuentra lo que necesitas.</p>
        <a href="/products" class="btn btn-primary">Ver Productos</a>
    </div>
</div>

<div class="row mt-5">
    <div class="col-12">
        <h2>Productos Destacados</h2>
    </div>
</div>

<div class="row mt-3">
    {{#if products.length}}
        {{#each products}}
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    {{#if this.thumbnails.[0]}}
                        <img src="{{this.thumbnails.[0]}}" class="card-img-top" alt="{{this.title}}">
                    {{else}}
                        <div class="card-img-top bg-light text-center py-5">Sin Imagen</div>
                    {{/if}}
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <p class="card-text"><strong>Precio: ${{this.price}}</strong></p>
                        <a href="/products/{{this._id}}" class="btn btn-primary">Ver Detalles</a>
                    </div>
                </div>
            </div>
        {{/each}}
    {{else}}
        <div class="col-12">
            <p>No hay productos disponibles.</p>
        </div>
    {{/if}}
</div>
